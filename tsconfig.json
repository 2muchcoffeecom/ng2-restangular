{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "compileOnSave": false,
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "lib"
  },
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}


